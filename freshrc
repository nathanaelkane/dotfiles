fresh jasoncodes/dotfiles bin/adduser --bin

# vim
fresh vim/leader.vim --file=~/.vimrc
fresh twe4ked/dotfiles vim/vundle_before.vim --file=~/.vimrc
fresh vim/vundle.vim --file=~/.vimrc
fresh twe4ked/dotfiles vim/vundle_after.vim --file=~/.vimrc
fresh vim/autocmds.vim --file=~/.vimrc
fresh vim/colors --file=~/.vim/colors/
fresh vim/functions.vim --file=~/.vimrc
fresh vim/keybindings.vim --file=~/.vimrc
fresh vim/plugin_config.vim --file=~/.vimrc
fresh vim/vimrc --file
fresh vim/gvimrc --file
fresh vim/backup --file=~/.vim/backup/
fresh vim/undodir --file=~/.vim/undodir/
